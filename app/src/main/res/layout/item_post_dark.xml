<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/author_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_profile"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/author_image"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GeneviÃ¨ve"
                android:textColor="@color/dark_text_primary"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3w"
                android:textColor="@color/dark_text_secondary"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/subscribe_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subscribe"
            android:textColor="@color/dark_orange_accent"
            android:textStyle="bold"
            android:layout_toStartOf="@id/more_options"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/more_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_options"
            app:tint="@color/dark_text_secondary"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/post_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The big four :)"
        android:textColor="@color/dark_text_primary"
        android:textSize="18sp"
        android:layout_marginTop="12dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/dark_surface">

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/news_placeholder_1"
            android:scaleType="centerCrop"/>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20,8k"
            android:textColor="@color/dark_text_secondary"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_heart_outline"
            app:drawableTint="@color/dark_text_secondary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="172"
            android:textColor="@color/dark_text_secondary"
            android:layout_marginStart="24dp"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_comment_outline"
            app:drawableTint="@color/dark_text_secondary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3,4k"
            android:textColor="@color/dark_text_secondary"
            android:layout_marginStart="24dp"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_share_outline"
            app:drawableTint="@color/dark_text_secondary"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_surface"/>

</LinearLayout>