<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp">

    <TextView
        android:id="@+id/news_title_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="John Bolton indicted on 18 counts in Maryland"
        android:textColor="@color/dark_text_primary"
        android:textSize="18sp"
        android:layout_toStartOf="@id/news_image_search"
        android:layout_marginEnd="16dp"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/news_image_search"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:src="@drawable/news_placeholder_1"
        android:scaleType="centerCrop"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>