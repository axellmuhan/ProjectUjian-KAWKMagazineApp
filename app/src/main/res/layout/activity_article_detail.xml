<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    tools:context=".ArticleDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/article_image_detail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/news_placeholder_1"
            android:contentDescription="Gambar Artikel" />

        <TextView
            android:id="@+id/article_title_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            tools:text="Judul Artikel Akan Muncul di Sini" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/article_author_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Nama Penulis" />

            <TextView
                android:id="@+id/article_timestamp_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_text_secondary"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                tools:text="â€¢ 19 Oktober 2025, 18:56" />

        </LinearLayout>

        <TextView
            android:id="@+id/article_content_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_text_secondary"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp"
            tools:text="Isi konten artikel akan muncul di sini..." />

    </LinearLayout>
</ScrollView>